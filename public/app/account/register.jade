.container
    div.col-md-6.col-md-offset-3
        div.row
            div.panel.panel-success
                div.panel-heading
                    h3.panel-title.text-center.text-size-18 Registration
                div.panel-body(ng-controller="AccountController")
                    form.form-horizontal(name="registerForm")
                        div.form-group
                            label.col-md-4.text-size-18(for="Username") Username
                            div.col-md-12
                                input#Username.form-control.form-validation(type="text", name="username" placeholder="Username", ng-model="user.username", required)
                        div.form-group
                            label.col-md-4.text-size-18(for="Password") Password
                            div.col-md-12
                                input#Password.form-control.form-validation(type="password", name="password" placeholder="Password", ng-model="user.password", required)
                        div.form-group
                            label.col-md-4.text-size-18(for="ConfirmPassword") Confirm password
                            div.col-md-12
                                input#ConfirmPassword.form-control.form-validation(type="password", name="confirmPass", placeholder="Confirm password", data-match="user.password", ng-model="user.confirmPassword", required)
                                p.text-danger(ng-show="registerForm.confirmPass.$error.match") Passwords don't match!
                        div.form-group
                            label.col-md-4.text-size-18(for="FirstName") First name
                            div.col-md-12
                                input#FirstName.form-control.form-validation(type="text", name="firstName" placeholder="First name", ng-model="user.firstName", required)
                        div.form-group
                            label.col-md-4.text-size-18(for="LastName") Last name
                            div.col-md-12
                                input#LastName.form-control.form-validation(type="text", name="lastName", placeholder="Last name", ng-model="user.lastName", required)
                        div.form-group
                            label.col-md-4.text-size-18(for="Email") Email
                            div.col-md-12
                                input#Email.form-control.form-validation(type="email", name="emailAddress" ng-pattern='/^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,4}$/', placeholder="Email", ng-model="user.email", required)
                                p.text-danger(ng-show="registerForm.emailAddress.$error.pattern") Invalid email address!
                    span.text-info All fields are required
                    button.btn.btn-success.pull-right(ng-disabled="registerForm.$invalid", ng-click="register(user)") Register