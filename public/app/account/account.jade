div.navbar-right(ng-controller="AccountController")
    ul.nav.navbar-nav.navbar-right(ng-hide="identity.isAuthenticated()")
        li
            a(href="#/login") Login
        li
            a(href="#/register") Register
    ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
        li.dropdown
            a.dropdown-toggle(href="", data-toggle="dropdown")
                | {{ identity.currentUser.firstName + ' ' + identity.currentUser.lastName}}
                span.caret
            ul.dropdown-menu
                li(ng-show="identity.currentUser.isInRole('admin')")
                    a(href="#/admin/admin-panel") Admin panel
                li(ng-show="identity.currentUser.isInRole('moderator')")
                    a(href="#/moderator/moderator-panel") Moderator panel
                li(ng-show="identity.isAuthenticated()")
                    a(href="#/account/settings") Settings
                li
                    a(href="#", ng-click="logout()") Logout
