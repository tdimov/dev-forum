.container
    div(ng-controller="TagsAdminListController")
        div.margin-top-15
            a.btn.btn-primary(href="#/admin/tags/add") Add new tag
        p.text.text-info.text-size-18(ng-if="tags.length === 0") There are no tags added!
        div.table-responsive.margin-top-15(ng-if="tags.length > 0")
            table.table.table-bordered.table-hover
                thead
                    tr
                        th Name
                        th Description
                        th Actions
                .tbody
                    tr(ng-repeat="tag in tags")
                        td {{ tag.name }}
                        td {{ tag.description }}
                        td
                            a.btn.btn-primary.btn-sm.margin-right(href="#/admin/tags/{{ tag.id }}", title="Edit")
                                i.glyphicon.glyphicon-pencil
                            btn.btn.btn-primary.btn-sm.margin-right(type="button", ng-click="deleteTag(tag.id)" title="Delete", data-toggle="modal", data-target="#acceptModal")
                                i.glyphicon.glyphicon-remove

            div#acceptModal.modal(tabindex="-1", role="dialog", aria-hidden="true")
                div.modal-dialog
                    div.modal-content
                        div.modal-header
                            button.close(type="button", data-dismiss="modal")
                                span(aria-hidden="true") &times;
                                span.sr-only Close
                            h4.modal-title Are you sure?
                        div.modal-footer
                            button.btn.btn-primary(type="button", ng-click="acceptDeleting()", data-dismiss="modal") Yes
                            button.btn.btn-default(data-dismiss="modal") No